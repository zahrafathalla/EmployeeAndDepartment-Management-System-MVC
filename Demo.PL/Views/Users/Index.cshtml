@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
}
<h1> All Users</h1>
<hr />


<br />
<form class="my-3" asp-action="Index" asp-controller="Users">
    <div class="row">
        <div class="col-sm-8">
            <input placeholder="Search By Email" name="SearchValue" class="form-control"/>
        </div>
        <div class="col-sm-4">
            <input type="submit" value="Search" class="btn btn-success btn-block" />
        </div>
    </div>
</form>



@if (Model?.Count() > 0)
{
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(x => x.Id)</th>
                <th scope="col">@Html.DisplayNameFor(x => x.UserName)</th>
                <th scope="col">@Html.DisplayNameFor(x => x.Email)</th>
                <th scope="col">Details</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.UserName</td>
                    <td>@item.Email</td>
                   

                    <td>
                        <a class="btn btn-success" asp-controller="Users" asp-action="Details" asp-route-id="@item.Id">
                            <i class="fas fa-eye"></i> Details
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-controller="Users" asp-action="Update" asp-route-id="@item.Id">
                            <i class=" fas fa-edit"></i>Update
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-controller="Users" asp-action="Delete" asp-route-id="@item.Id">
                            <i class=" fas fa-trash"></i>Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h3>No Users Found</h3>
    </div>
}

