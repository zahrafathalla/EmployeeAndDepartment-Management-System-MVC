@model DepartmentViewModel

<div class="row">
    <div class="col-6">
        <form asp-action="Update" asp-controller="Department" class="form-container">
            <table class="table table-striped table-dark">
                <tr>
                    <td><label asp-for=" @Model.Code" class="col-form-label">Department Code: </label></td>
                    <td>
                        <input asp-for="@Model.Code" class="form-control" />
                    </td>
                </tr>
                <tr>
                    <td><label asp-for=" @Model.Name" class="col-form-label">Department Name:</label></td>
                    <td>
                        <input asp-for="@Model.Name" class="form-control" />
                    </td>
                </tr>
            </table>
            <div class="button-group">
                <input type="submit" value="Update" class="btn btn-dark" />
                <a asp-action="Index" class="btn btn-dark">Back To List</a>
            </div>
        </form>
    </div>
</div>

