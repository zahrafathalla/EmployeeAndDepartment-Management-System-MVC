@model ApplicationRoles
@{
    ViewData["Title"] = "Update";
}

<div class="row">
    <div class="col-6">
        <form asp-action="Update" asp-controller="Roles">
            <input hidden asp-for="Id" />
            <table class="table table-striped table-dark">
                <tr>
                    <td><label asp-for=" @Model.Name" class="col-form-label">Role Name: </label></td>
                    <td>
                        <input asp-for="@Model.Name" class="form-control" />
                    </td>
                </tr>
            </table>
            <br />
            <div>
                <a asp-action="AddOrRemoveUsers" asp-controller="Roles" class="btn btn-dark" asp-route-roleId="@Model.Id"> Add Or Remove Users</a>
            </div>

            <br />

            <div class="button-group">
                <input type="submit" value="Save" class="btn btn-dark" />
                <a asp-action="Index" class="btn btn-dark btn-white-on-click">Back To List</a>
            </div>
        </form>
    </div>
</div>
 

