@model IEnumerable<ApplicationRoles>
@{
    ViewData["Title"] = "Index";
}

<div>
    <h1> All Roles</h1>
    <hr />
    <br />
    <a asp-action="Create" class="btn btn-dark"> Create New Role</a>
</div>

<br />
<br />



@if (Model?.Count() > 0)
{
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(x => x.Id)</th>
                <th scope="col">@Html.DisplayNameFor(x => x.Name)</th>
                <th scope="col">@Html.DisplayNameFor(x => x.CreateAt)</th>
                <th scope="col">Details</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@Html.DisplayFor(m => item.CreateAt.Day)-@Html.DisplayFor(m => item.CreateAt.Month)-@Html.DisplayFor(m => item.CreateAt.Year)</td>
                   

                    <td>
                        <a class="btn btn-success" asp-controller="Roles" asp-action="Details" asp-route-id="@item.Id">
                            <i class="fas fa-eye"></i> Details
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-controller="Roles" asp-action="Update" asp-route-id="@item.Id">
                            <i class=" fas fa-edit"></i>Update
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-controller="Roles" asp-action="Delete" asp-route-id="@item.Id">
                            <i class=" fas fa-trash"></i>Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h3>No Roles Found</h3>
    </div>
}


