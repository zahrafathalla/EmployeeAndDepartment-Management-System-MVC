@model SignUpViewModel
@{
	ViewData["Title"] = "SingUp";
	Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


<div class="main-agileinfo">
	<div class="agileits-top">
		@* <div asp-validation-summary="All" class="text-danger"></div> *@
		@Html.ValidationSummary(true,"", new {@class = "text-danger"})
		<form asp-action="SignUp">
			<input class="text email" type="email" asp-for="@Model.Email" placeholder="Email" required="">
			<span asp-validation-for="@Model.Email" class="text-danger"></span>

			<input class="text" type="password" asp-for="@Model.Password" placeholder="Password" required="">
			<span asp-validation-for="@Model.Password" class="text-danger"></span>

			<input class="text w3lpass" type="password" asp-for="@Model.ConfirmPassword" placeholder="Confirm Password" required="">
			<span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>

			<div class="wthree-text">
				<label class="anim">
					<input type="checkbox" class="checkbox" required="">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNUP">
		</form>
		<div class="row justify-content-between">
			<div class="col">
				<p>Don't have an Account? <a asp-action="Login">Login Now!</a></p>
			</div>
		</div>
	
	</div>
</div>

@section Scripts {

	<partial name="_ValidationScriptsPartial" />
}

